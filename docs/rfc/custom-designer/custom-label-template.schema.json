{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dc-label-manager.local/schemas/custom-label-template.schema.json",
  "title": "CustomLabelTemplateV1",
  "type": "object",
  "additionalProperties": false,
  "required": ["templateId", "name", "schemaVersion", "page", "zones", "elements", "metadata"],
  "properties": {
    "templateId": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 120
    },
    "schemaVersion": {
      "type": "string",
      "const": "1.0.0"
    },
    "page": {
      "type": "object",
      "additionalProperties": false,
      "required": ["widthMm", "heightMm"],
      "properties": {
        "widthMm": { "type": "number", "const": 38.1 },
        "heightMm": { "type": "number", "const": 101.6 }
      }
    },
    "zones": {
      "type": "object",
      "additionalProperties": false,
      "required": ["printableTopMm", "printableBottomMm", "lockedTopMm", "lockedBottomMm"],
      "properties": {
        "printableTopMm": { "type": "number", "const": 0 },
        "printableBottomMm": { "type": "number", "const": 50.8 },
        "lockedTopMm": { "type": "number", "const": 50.8 },
        "lockedBottomMm": { "type": "number", "const": 101.6 }
      }
    },
    "elements": {
      "type": "array",
      "maxItems": 300,
      "items": { "$ref": "#/$defs/element" }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": ["createdAt", "updatedAt"],
      "properties": {
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "createdBy": { "type": "string", "maxLength": 120 },
        "updatedBy": { "type": "string", "maxLength": 120 }
      }
    }
  },
  "$defs": {
    "element": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "type", "xMm", "yMm", "widthMm", "heightMm", "style", "binding"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1,
          "maxLength": 80
        },
        "type": {
          "type": "string",
          "enum": ["text", "variableText", "line", "rect", "arrow"]
        },
        "xMm": {
          "type": "number",
          "minimum": 0,
          "maximum": 38.1
        },
        "yMm": {
          "type": "number",
          "minimum": 0,
          "maximum": 101.6
        },
        "widthMm": {
          "type": "number",
          "exclusiveMinimum": 0,
          "maximum": 38.1
        },
        "heightMm": {
          "type": "number",
          "exclusiveMinimum": 0,
          "maximum": 101.6
        },
        "style": {
          "$ref": "#/$defs/style"
        },
        "binding": {
          "$ref": "#/$defs/binding"
        }
      }
    },
    "style": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "fill": { "type": "string", "default": "#000000" },
        "stroke": { "type": "string", "default": "#000000" },
        "strokeWidth": { "type": "number", "minimum": 0, "maximum": 3, "default": 0 },
        "fontFamily": { "type": "string", "maxLength": 80, "default": "Helvetica" },
        "fontSizePt": { "type": "number", "minimum": 4, "maximum": 48, "default": 8 },
        "fontWeight": { "type": "string", "enum": ["normal", "bold"], "default": "normal" },
        "fontStyle": { "type": "string", "enum": ["normal", "italic"], "default": "normal" },
        "textAlign": { "type": "string", "enum": ["left", "center", "right"], "default": "left" }
      },
      "default": {}
    },
    "binding": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "value"],
      "properties": {
        "kind": {
          "type": "string",
          "enum": ["static", "field"]
        },
        "value": {
          "type": "string",
          "maxLength": 1000
        },
        "fallback": {
          "type": "string",
          "maxLength": 300
        }
      }
    }
  }
}
